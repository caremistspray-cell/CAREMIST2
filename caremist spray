                    <label><i class="fab fa-whatsapp" style="color: #25D366;"></i> Nomor WhatsApp</label>
                    <input type="tel" id="customerPhone" placeholder="08xxxxxxxxxx" required>
                    <span class="error-message">Nomor WhatsApp harus diisi</span>
                </div>

                <button class="btn btn-next" onclick="nextStep(1)">
                    Lanjutkan <i class="fas fa-arrow-right"></i>
                </button>
            </div>

            <!-- Step 2: Product Selection -->
            <div class="form-step" id="step-2">
                <h2 style="font-family: 'Nunito', sans-serif; color: var(--text-dark); margin-bottom: 0.5rem; text-align: center;">
                    Pilih Varian
                </h2>
                <p style="text-align: center; color: var(--text-light); margin-bottom: 2rem; font-size: 0.9rem;">
                    Pilih varian Caremist favorit Anda
                </p>

                <div class="product-selection-grid">
                    <div class="product-option" onclick="selectProduct('Strawmellow', 12000)">
                        <div class="check-icon"><i class="fas fa-check"></i></div>
                        <img src="https://raw.githubusercontent.com/tspray-cell/tspray-cell.github.io/main/IMG-20260207-WA0035.jpg" 
                             alt="Strawmellow"
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'">
                        <div style="width:80px;height:80px;background:#FFE5EC;border-radius:10px;display:none;align-items:center;justify-content:center;font-size:2rem;color:#FF6B9D;margin:0 auto 0.5rem;">
                            <i class="fas fa-apple-alt"></i>
                        </div>
                        <h4>Strawmellow</h4>
                        <div class="price">Rp 12.000</div>
                    </div>
                    <div class="product-option" onclick="selectProduct('Vanilla Cake', 12000)">
                        <div class="check-icon"><i class="fas fa-check"></i></div>
                        <img src="https://raw.githubusercontent.com/tspray-cell/tspray-cell.github.io/main/IMG-20260207-WA0029.jpg" 
                             alt="Vanilla Cake"
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'">
                        <div style="width:80px;height:80px;background:#FFF8DC;border-radius:10px;display:none;align-items:center;justify-content:center;font-size:2rem;color:#F4D03F;margin:0 auto 0.5rem;">
                            <i class="fas fa-birthday-cake"></i>
                        </div>
                        <h4>Vanilla Cake</h4>
                        <div class="price">Rp 12.000</div>
                    </div>
                    <div class="product-option" onclick="selectProduct('Natural', 12000)">
                        <div class="check-icon"><i class="fas fa-check"></i></div>
                        <img src="https://raw.githubusercontent.com/tspray-cell/tspray-cell.github.io/main/IMG-20260207-WA0031.jpg" 
                             alt="Natural"
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'">
                        <div style="width:80px;height:80px;background:#E0F2F7;border-radius:10px;display:none;align-items:center;justify-content:center;font-size:2rem;color:#85C1E9;margin:0 auto 0.5rem;">
                            <i class="fas fa-gem"></i>
                        </div>
                        <h4>Natural</h4>
                        <div class="price">Rp 12.000</div>
                    </div>
                    <div class="product-option" onclick="selectProduct('Sweet Baby', 12000)">
                        <div class="check-icon"><i class="fas fa-check"></i></div>
                        <img src="https://raw.githubusercontent.com/tspray-cell/tspray-cell.github.io/main/IMG-20260207-WA0033.jpg" 
                             alt="Sweet Baby"
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'">
                        <div style="width:80px;height:80px;background:#F3E5F5;border-radius:10px;display:none;align-items:center;justify-content:center;font-size:2rem;color:#D7BDE2;margin:0 auto 0.5rem;">
                            <i class="fas fa-baby"></i>
                        </div>
                        <h4>Sweet Baby</h4>
                        <div class="price">Rp 12.000</div>
                    </div>
                </div>

                <div class="form-group" style="text-align: center;">
                    <label>Jumlah</label>
                    <div class="quantity-selector">
                        <button class="qty-btn" onclick="changeQty(-1)">-</button>
                        <div class="qty-display" id="quantity">1</div>
                        <button class="qty-btn" onclick="changeQty(1)">+</button>
                    </div>
                </div>

                <button class="btn btn-back" onclick="prevStep(2)">
                    <i class="fas fa-arrow-left"></i> Kembali
                </button>
                <button class="btn btn-next" onclick="nextStep(2)">
                    Lanjutkan <i class="fas fa-arrow-right"></i>
                </button>
            </div>

            <!-- Step 3: Pickup Schedule -->
            <div class="form-step" id="step-3">
                <h2 style="font-family: 'Nunito', sans-serif; color: var(--text-dark); margin-bottom: 0.5rem; text-align: center;">
                    Jadwal Pengambilan
                </h2>
                <p style="text-align: center; color: var(--text-light); margin-bottom: 2rem; font-size: 0.9rem;">
                    Pilih lokasi dan waktu pengambilan
                </p>

                <div class="pickup-location">
                    <i class="fas fa-map-marker-alt"></i>
                    <h3>GKM FEB Unair</h3>
                    <p>Gedung Kuliah Mahasiswa Fakultas Ekonomi dan Bisnis<br>Universitas Airlangga</p>
                </div>

                <div class="date-selection">
                    <label style="display: block; margin-bottom: 1rem; font-weight: 700;">
                        <i class="fas fa-calendar-alt" style="color: var(--soft-pink);"></i> Pilih Tanggal
                    </label>
                    <div class="date-grid">
                        <div class="date-option" onclick="selectDate('Senin', '9 Februari 2026', this)">
                            <div class="day">Senin</div>
                            <div class="date-num">9 Feb</div>
                        </div>
                        <div class="date-option" onclick="selectDate('Selasa', '10 Februari 2026', this)">
                            <div class="day">Selasa</div>
                            <div class="date-num">10 Feb</div>
                        </div>
                        <div class="date-option" onclick="selectDate('Rabu', '11 Februari 2026', this)">
                            <div class="day">Rabu</div>
                            <div class="date-num">11 Feb</div>
                        </div>
                        <div class="date-option" onclick="selectDate('Kamis', '12 Februari 2026', this)">
                            <div class="day">Kamis</div>
                            <div class="date-num">12 Feb</div>
                        </div>
                    </div>
                </div>

                <div class="time-selection">
                    <label style="display: block; margin-bottom: 1rem; font-weight: 700;">
                        <i class="fas fa-clock" style="color: var(--soft-blue);"></i> Pilih Jam
                    </label>
                    <div class="time-grid">
                        <div class="time-option" onclick="selectTime('13.00', this)">13.00 WIB</div>
                        <div class="time-option" onclick="selectTime('14.00', this)">14.00 WIB</div>
                        <div class="time-option" onclick="selectTime('15.00', this)">15.00 WIB</div>
                    </div>
                </div>

                <button class="btn btn-back" onclick="prevStep(3)">
                    <i class="fas fa-arrow-left"></i> Kembali
                </button>
                <button class="btn btn-next" onclick="nextStep(3)">
                    Lanjutkan <i class="fas fa-arrow-right"></i>
                </button>
            </div>

            <!-- Step 4: Payment -->
            <div class="form-step" id="step-4">
                <h2 style="font-family: 'Nunito', sans-serif; color: var(--text-dark); margin-bottom: 0.5rem; text-align: center;">
                    Pembayaran
                </h2>
                <p style="text-align: center; color: var(--text-light); margin-bottom: 1.5rem; font-size: 0.9rem;">
                    Scan QRIS untuk menyelesaikan pembayaran
                </p>

                <div class="timer-container">
                    <div class="timer-display" id="timer">02:00</div>
                    <div class="timer-label">Selesaikan pembayaran dalam waktu yang tersedia</div>
                </div>

                <div class="order-summary">
                    <h4>Ringkasan Pesanan</h4>
                    <div class="summary-item">
                        <span>Nama:</span>
                        <span id="summary-name">-</span>
                    </div>
                    <div class="summary-item">
                        <span>Produk:</span>
                        <span id="summary-product">-</span>
                    </div>
                    <div class="summary-item">
                        <span>Jumlah:</span>
                        <span id="summary-qty">-</span>
                    </div>
                    <div class="summary-item">
                        <span>Pengambilan:</span>
                        <span id="summary-pickup">-</span>
                    </div>
                    <div class="summary-total">
                        <span>Total:</span>
                        <span id="summary-total">Rp 0</span>
                    </div>
                </div>

                <div class="qris-container">
                    <div class="qris-label">
                        <i class="fas fa-qrcode"></i> Scan QRIS
                    </div>
                    <!-- QRIS Image -->
                    <img src="https://raw.githubusercontent.com/tspray-cell/tspray-cell.github.io/main/IMG-20260207-WA0048.jpg" 
                         alt="QRIS Payment" 
                         class="qris-image"
                         onerror="this.style.display='none'; this.nextElementSibling.style.display='block'">
                    <div style="display:none;width:250px;height:250px;background:#f0f0f0;border:3px dashed #ccc;border-radius:15px;margin:0 auto;align-items:center;justify-content:center;flex-direction:column;color:#999;">
                        <i class="fas fa-qrcode" style="font-size:4rem;margin-bottom:1rem;"></i>
                        <span>QRIS Code</span>
                    </div>
                </div>

                <div class="payment-instructions">
                    <h4><i class="fas fa-info-circle" style="color: var(--soft-blue);"></i> Cara Pembayaran:</h4>
                    <ol>
                        <li>Buka aplikasi e-wallet (OVO, GoPay, DANA, ShopeePay, dll)</li>
                        <li>Pilih menu "Scan QR" atau "Bayar"</li>
                        <li>Scan kode QRIS di atas</li>
                        <li>Masukkan nominal sesuai total pembayaran</li>
                        <li>Konfirmasi pembayaran</li>
                        <li>Klik tombol "Konfirmasi Pembayaran" di bawah</li>
                    </ol>
                </div>

                <button class="btn btn-back" onclick="prevStep(4)">
                    <i class="fas fa-arrow-left"></i> Kembali
                </button>
                <button class="btn btn-confirm" onclick="confirmPayment()">
                    <i class="fas fa-check-circle"></i> Konfirmasi Pembayaran
                </button>
            </div>
        </div>
    </div>

    <!-- Loader -->
    <div class="loader" id="loader">
        <div class="loader-circle"></div>
    </div>

    <script>
        // Global Variables
        let currentStep = 1;
        let orderData = {
            name: '',
            phone: '',
            product: '',
            price: 0,
            qty: 1,
            date: '',
            time: ''
        };
        let timerInterval;
        let timeLeft = 120; // 2 minutes in seconds

        // Smooth Scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Navbar Scroll Effect
        window.addEventListener('scroll', () => {
            const nav = document.querySelector('nav');
            if (window.scrollY > 50) {
                nav.style.boxShadow = '0 2px 20px rgba(0,0,0,0.1)';
            } else {
                nav.style.boxShadow = '0 2px 20px rgba(0,0,0,0.05)';
            }
        });

        // Modal Functions
        function startOrder() {
            document.getElementById('orderModal').style.display = 'flex';
            resetOrder();
        }

        function closeOrderModal() {
            document.getElementById('orderModal').style.display = 'none';
            clearInterval(timerInterval);
        }

        function resetOrder() {
            currentStep = 1;
            orderData = { name: '', phone: '', product: '', price: 0, qty: 1, date: '', time: '' };
            timeLeft = 120;
            
            // Reset all steps
            document.querySelectorAll('.form-step').forEach(step => step.classList.remove('active'));
            document.getElementById('step-1').classList.add('active');
            
            // Reset dots
            document.querySelectorAll('.step-dot').forEach((dot, index) => {
                dot.classList.remove('active', 'completed');
                if (index === 0) dot.classList.add('active');
            });
            
            // Reset inputs
            document.getElementById('customerName').value = '';
            document.getElementById('customerPhone').value = '';
            document.getElementById('quantity').textContent = '1';
            
            // Reset selections
            document.querySelectorAll('.product-option').forEach(el => el.classList.remove('selected'));
            document.querySelectorAll('.date-option').forEach(el => el.classList.remove('selected'));
            document.querySelectorAll('.time-option').forEach(el => el.classList.remove('selected'));
            
            // Clear errors
            document.querySelectorAll('.form-group').forEach(el => el.classList.remove('error'));
            
            clearInterval(timerInterval);
        }

        // Step Navigation
        function nextStep(step) {
            if (step === 1) {
                // Validate Step 1
                const name = document.getElementById('customerName').value.trim();
                const phone = document.getElementById('customerPhone').value.trim();
                
                let valid = true;
                
                if (!name) {
                    document.getElementById('name-group').classList.add('error');
                    valid = false;
                } else {
                    document.getElementById('name-group').classList.remove('error');
                    orderData.name = name;
                }
                
                if (!phone) {
                    document.getElementById('phone-group').classList.add('error');
                    valid = false;
                } else {
                    document.getElementById('phone-group').classList.remove('error');
                    orderData.phone = phone;
                }
                
                if (!valid) return;
            }
            
            if (step === 2) {
                // Validate Step 2
                if (!orderData.product) {
                    alert('Silakan pilih varian produk terlebih dahulu!');
                    return;
                }
                orderData.qty = parseInt(document.getElementById('quantity').textContent);
            }
            
            if (step === 3) {
                // Validate Step 3
                if (!orderData.date) {
                    alert('Silakan pilih tanggal pengambilan!');
                    return;
                }
                if (!orderData.time) {
                    alert('Silakan pilih jam pengambilan!');
                    return;
                }
                
                // Update summary
                updateSummary();
                // Start timer
                startTimer();
            }
            
            // Update UI
            document.getElementById(`step-${step}`).classList.remove('active');
            document.getElementById(`step-${step + 1}`).classList.add('active');
            
            // Update dots
            document.getElementById(`dot-${step}`).classList.remove('active');
            document.getElementById(`dot-${step}`).classList.add('completed');
            document.getElementById(`dot-${step + 1}`).classList.add('active');
            
            currentStep = step + 1;
        }

        function prevStep(step) {
            document.getElementById(`step-${step}`).classList.remove('active');
            document.getElementById(`step-${step - 1}`).classList.add('active');
            
            document.getElementById(`dot-${step}`).classList.remove('active');
            document.getElementById(`dot-${step - 1}`).classList.remove('completed');
            document.getElementById(`dot-${step - 1}`).classList.add('active');
            
            currentStep = step - 1;
            
            if (step === 4) {
                clearInterval(timerInterval);
            }
        }

        // Product Selection
        function selectProduct(name, price) {
            orderData.product = name;
            orderData.price = price;
            
            document.querySelectorAll('.product-option').forEach(el => el.classList.remove('selected'));
            event.currentTarget.classList.add('selected');
        }

        function changeQty(delta) {
            const qtyEl = document.getElementById('quantity');
            let current = parseInt(qtyEl.textContent);
            current += delta;
            if (current < 1) current = 1;
            qtyEl.textContent = current;
        }

        // Date & Time Selection
        function selectDate(day, date, element) {
            orderData.date = `${day}, ${date}`;
            document.querySelectorAll('.date-option').forEach(el => el.classList.remove('selected'));
            element.classList.add('selected');
        }

        function selectTime(time, element) {
            orderData.time = time;
            document.querySelectorAll('.time-option').forEach(el => el.classList.remove('selected'));
            element.classList.add('selected');
        }

        // Summary Update
        function updateSummary() {
            document.getElementById('summary-name').textContent = orderData.name;
            document.getElementById('summary-product').textContent = orderData.product;
            document.getElementById('summary-qty').textContent = orderData.qty + ' pcs';
            document.getElementById('summary-pickup').textContent = `${orderData.date} jam ${orderData.time}`;
            document.getElementById('summary-total').textContent = 'Rp ' + (orderData.price * orderData.qty).toLocaleString('id-ID');
        }

        // Timer Function
        function startTimer() {
            timeLeft = 120;
            updateTimerDisplay();
            
            timerInterval = setInterval(() => {
                timeLeft--;
                updateTimerDisplay();
                
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    alert('Waktu pembayaran habis! Silakan ulangi pemesanan.');
                    closeOrderModal();
                }
            }, 1000);
        }

        function updateTimerDisplay() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            document.getElementById('timer').textContent = 
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }

        // Confirm Payment
        function confirmPayment() {
            const total = orderData.price * orderData.qty;
            
            const message = `*KONFIRMASI PEMBAYARAN CAREMIST*%0A%0A` +
                          `*Data Pemesan:*%0A` +
                          `Nama: ${orderData.name}%0A` +
                          `No. HP: ${orderData.phone}%0A%0A` +
                          `*Detail Pesanan:*%0A` +
                          `Produk: Caremist ${orderData.product}%0A` +
                          `Jumlah: ${orderData.qty} pcs%0A` +
                          `Total: Rp ${total.toLocaleString('id-ID')}%0A%0A` +
                          `*Pengambilan:*%0A` +
                          `Lokasi: GKM FEB Unair%0A` +
                          `Tanggal: ${orderData.date}%0A` +
                          `Jam: ${orderData.time} WIB%0A%0A` +
                          `*Status:* Pembayaran QRIS telah dilakukan âœ…%0A%0A` +
                          `Terima kasih! Stay Fresh Stay Confident ðŸŒ¸`;

            const whatsappURL = `https://wa.me/qr/3BFP46LQV7TMP1?text=${message}`;
            
            window.open(whatsappURL, '_blank');
            closeOrderModal();
            alert('Terima kasih! Pesanan Anda akan segera diproses. Silakan cek WhatsApp untuk konfirmasi.');
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('orderModal');
            if (event.target == modal) {
                closeOrderModal();
            }
        }

        // Add animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: "0px 0px -50px 0px"
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = "1";
                    entry.target.style.transform = "translateY(0)";
                }
            });
        }, observerOptions);

        // Observe all cards
        document.querySelectorAll('.feature-card, .product-card').forEach((el) => {
            el.style.opacity = "0";
            el.style.transform = "translateY(20px)";
            el.style.transition = "all 0.6s ease";
            observer.observe(el);
        });
    </script>
</body>
</html>
