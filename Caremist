    <script>
        let currentStep = 1;
        let timerInterval;
        
        function startOrder(varian) {
            document.getElementById('orderModal').style.display = 'flex';
            if(varian) document.getElementById('varian').value = varian;
        }
        
        function closeModal() {
            document.getElementById('orderModal').style.display = 'none';
            clearInterval(timerInterval);
            resetSteps();
        }
        
        function resetSteps() {
            currentStep = 1;
            document.querySelectorAll('.step').forEach(s => s.classList.remove('active'));
            document.getElementById('step1').classList.add('active');
        }
        
        function nextStep(step) {
            // Validasi
            if(step === 1) {
                if(!document.getElementById('nama').value || !document.getElementById('wa').value) {
                    alert('Isi nama dan nomor WA!');
                    return;
                }
            }
            
            document.getElementById('step' + step).classList.remove('active');
            document.getElementById('step' + (step + 1)).classList.add('active');
            currentStep = step + 1;
            
            if(currentStep === 4) startTimer();
        }
        
        function startTimer() {
            let time = 120;
            timerInterval = setInterval(() => {
                time--;
                let min = Math.floor(time / 60);
                let sec = time % 60;
                document.getElementById('timer').textContent = 
                    (min < 10 ? '0' : '') + min + ':' + (sec < 10 ? '0' : '') + sec;
                
                if(time <= 0) {
                    clearInterval(timerInterval);
                    alert('Waktu habis!');
                    closeModal();
                }
            }, 1000);
        }
        
        function confirmOrder() {
            let nama = document.getElementById('nama').value;
            let wa = document.getElementById('wa').value;
            let varian = document.getElementById('varian').value;
            let jumlah = document.getElementById('jumlah').value;
            let tanggal = document.getElementById('tanggal').value;
            let jam = document.getElementById('jam').value;
            let total = 12000 * jumlah;
            
            let msg = `*KONFIRMASI PEMBAYARAN CAREMIST*%0A%0A` +
                     `Nama: ${nama}%0A` +
                     `WA: ${wa}%0A` +
                     `Produk: ${varian}%0A` +
                     `Jumlah: ${jumlah}%0A` +
                     `Total: Rp ${total.toLocaleString()}%0A` +
                     `Pengambilan: ${tanggal} jam ${jam}%0A` +
                     `Lokasi: GKM FEB Unair%0A%0A` +
                     `Status: Pembayaran QRIS ‚úÖ`;
            
            window.open(`https://wa.me/qr/3BFP46LQV7TMP1?text=${msg}`, '_blank');
            closeModal();
        }
        
        // Close modal when click outside
        window.onclick = function(e) {
            if(e.target == document.getElementById('orderModal')) closeModal();
        }
    </script>
